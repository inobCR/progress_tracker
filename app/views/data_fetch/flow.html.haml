.row
  .panel-group#accordion{role: "tablist", "aria-multiselectable" => "true"}
    .panel.panel-default
      .panel-heading#heading-1{role: "tab"}
        %h4.panel-title
          %a{role: "button", "data-toggle" => "collapse", "data-parent" => "#accordion", href: "#collapse-1", "aria-expanded" => "true", "aria-controls" => "collapse-1"}
            Step #1 - Authentication / Users APIs
      .panel-collapse.collapse#collapse-1.in{role: "tabpanel", "aria-labelledby" => "heading-1"}
        .panel-body
          - if @content.nil?
            %p Couldn't retrieve data from API; check the logs for details.
          - else
            - if @content.is_a? (String)
              %p= @content
            - else
              = render 'data_fetch/flow/users'
